import java.util.*; 
import java.lang.*;
import java.awt.*;
import java.awt.event.KeyEvent;

//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//  EDITOR  //////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

Input inputHandler;
Editor editor;

Object a;

void setup()
{
  size(800, 600);

  inputHandler = new Input();
  editor = new Editor();

  imageMode(CENTER);
  a = new Object("Player", "player.png");
}

void draw()
{
  inputHandler.Update();
  editor.Update();
  a.Draw();
}

void keyPressed()
{
  inputHandler.KeyPress(keyCode);
}

void keyReleased()
{
  inputHandler.KeyRelease(keyCode);
}

void mousePressed()
{
  inputHandler.MousePress();
}

void mouseReleased()
{
  inputHandler.MouseRelease();
}
